root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = 140
trim_trailing_whitespace = true
ij_typescript_enforce_trailing_comma = keep
ij_typescript_force_quote_style = true
ij_typescript_use_double_quotes = false

[*.md]
max_line_length = off
trim_trailing_whitespace = false
